generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model AppUser {
  id        String   @id @db.Char(36)
  email     String   @unique
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  children  Child[]
}

model Child {
  id          String   @id @default(uuid()) @db.Char(36)
  name        String
  class       String
  parentEmail String
  parentId    String?  @db.Char(36)
  allergies   Json?
  createdAt   DateTime @default(now())

  parent      AppUser? @relation(fields: [parentId], references: [id])

  @@index([parentId], map: "Child_parentId_fkey")
}