generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Menu {
  id          String       @id @default(uuid()) @db.Char(36)
  date        DateTime
  title       String
  createdAt  DateTime     @default(now())
  items       MenuItem[]
}

model MenuItem {
  id        String   @id @default(uuid()) @db.Char(36)
  name      String
  allergens Json?
  menuId    String   @db.Char(36)
  menu      Menu     @relation(fields: [menuId], references: [id])
}
